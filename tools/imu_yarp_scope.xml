<?xml version="1.0" encoding="UTF-8" ?>
<portscope rows="2" columns="2" carrier="mcast">
    <plot gridx="0"
          gridy="0"
          hspan="1"
          vspan="1"
          title="Orientation"
          size="60"
          minval="-90"
          maxval="90"
          bgcolor="LightGrey">
        <graph remote="/coman/inertial:o"
               index="0"
               color="Red"
               title="x [deg]"
               type="lines"
               size="1" />
        <graph remote="/coman/inertial:o"
               index="1"
               color="Green"
               title="y [deg]"
               size="3"
               type="lines" />
        <graph remote="/coman/inertial:o"
               index="2"
               color="Blue"
               title="z [deg]"
               size="1"
               type="lines" />
    </plot>
    
    <plot gridx="1"
          gridy="0"
          hspan="1"
          vspan="1"
          title="Linear Acceleration"
          size="60"
          minval="-10"
          maxval="10"
          bgcolor="LightGrey">
        <graph remote="/coman/inertial:o"
               index="3"
               color="Red"
               title="x [m/s^2]"
               type="lines"
               size="1" />
        <graph remote="/coman/inertial:o"
               index="4"
               color="Green"
               title="y [m/s^2]"
               size="3"
               type="lines" />
        <graph remote="/coman/inertial:o"
               index="5"
               color="Blue"
               title="z [m/s^2]"
               size="1"
               type="lines" />
    </plot>

    <plot gridx="0"
          gridy="1"
          hspan="1"
          vspan="1"
          title="Angular Velocity"
          size="60"
          minval="-180"
          maxval="180"
          bgcolor="LightGrey">
        <graph remote="/coman/inertial:o"
               index="6"
               color="Red"
               title="x [deg/s]"
               type="lines"
               size="1" />
        <graph remote="/coman/inertial:o"
               index="7"
               color="Green"
               title="y [deg/s]"
               size="3"
               type="lines" />
        <graph remote="/coman/inertial:o"
               index="8"
               color="Blue"
               title="z [deg/s]"
               size="1"
               type="lines" />
    </plot>

    <plot gridx="1"
          gridy="1"
          hspan="1"
          vspan="1"
          title="Orientation"
          size="60"
          minval="-90"
          maxval="90"
          bgcolor="LightGrey">
        <graph remote="/coman/inertial:o"
               index="9"
               color="Red"
               title="x [deg]"
               type="lines"
               size="1" />
        <graph remote="/coman/inertial:o"
               index="10"
               color="Green"
               title="y [deg]"
               size="3"
               type="lines" />
        <graph remote="/coman/inertial:o"
               index="11"
               color="Blue"
               title="z [deg]"
               size="1"
               type="lines" />
    </plot>
</portscope>
